{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ category.color }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ category.updateAt ? category.updateAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}">back to list</a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}
